<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="8dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:maxLines="2"
            android:layout_marginRight="140dp"
            android:layout_marginEnd="140dp"
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            tools:text="40 Full HD Flat Smart TV H5103 Series 5"
            android:textColor="@color/name_product_textview_color"
            android:textSize="18sp" />


        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/photo_imageview_thumbnail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/imagem_smartv_test" />

        <TextView
            android:id="@+id/currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="8dp"
            android:maxLines="3"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:paddingRight="2dp"
            android:paddingEnd="2dp"
            android:text="@string/currency_text_view"
            android:textColor="@color/currency_textview_color"
            android:textSize="14sp" />

        <TextView android:id="@+id/price_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1979.1"
            android:textColor="@color/price_textview_color"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_toRightOf="@id/currency"
            android:layout_alignBaseline="@id/currency"
            android:layout_toEndOf="@id/currency"/>

        <ImageView android:id="@+id/favorite_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="8dp"
            app:srcCompat="@drawable/ic_star_gray_border_48px"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentBottom="true"
            />


    </RelativeLayout>
</android.support.v7.widget.CardView>